{
  "name": "typescript-rest-ioc",
  "version": "1.0.2",
  "description": "A Typescript-Rest Service Factory to integrate it wit typescript-ioc.",
  "author": "Thiago da Rosa de Bustamante <trbustamante@gmail.com>",
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "pretest": "npm run build && npm run lint",
    "test": "jest --config ./test/jest.config.js --coverage",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.10",
    "@types/node": "^15.3.0",
    "codecov": "^3.7.2",
    "jest": "^26.4.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.2.0",
    "ts-loader": "^9.1.2",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "typescript-ioc": "github:LzpTec/typescript-ioc",
    "typescript-rest": "github:LzpTec/typescript-rest"
  },
  "keywords": [
    "typescript-rest",
    "rest",
    "ioc",
    "di",
    "cdi",
    "javascript",
    "typescript",
    "node",
    "dependency injection",
    "dependency inversion",
    "inversion of control container"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobustamante/typescript-rest-ioc.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiagobustamante/typescript-rest-ioc/issues"
  },
  "main": "./dist/typescript-rest-ioc.js",
  "typings": "./dist/typescript-rest-ioc.d.ts"
}